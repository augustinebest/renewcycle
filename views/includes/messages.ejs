<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="alert_error">
            <%= error.message %>
        </div>
    <% }) %>
<% } %>

<% if(success_msg != '') { %>
    <div class="alert_success">
        <%= success_msg %>
    </div>
<% } %>

<% if(error_msg != '') { %>
    <div class="alert_error">
        <%= error_msg %>
    </div>
<% } %>

<% if(error != '') { %>
    <div class="alert_error">
        <%= error %>
    </div>
<% } %>